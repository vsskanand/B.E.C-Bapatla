<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AppStudio.Controls"
    xmlns:html2xaml="using:AppStudio.Controls.Html2Xaml"
    xmlns:commands="using:AppStudio.Commands">

    <!-- HtmlList -->
    <DataTemplate x:Key="GovernanceList">
        <controls:WebControl Html="{Binding Items[0].Content}" MinWidth="360" Foreground="{StaticResource AppForegroundColor}"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </DataTemplate>

    <!-- HtmlItem -->
    <DataTemplate x:Key="GovernanceItem">
        <controls:WebControl Html="{Binding Content}" MinWidth="360" Foreground="{StaticResource AppForegroundColor}" />
    </DataTemplate>
        

</ResourceDictionary>
